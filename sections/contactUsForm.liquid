<style>
  .customContactUsForm .sectionHeader {
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .customContactUsForm .pageContent {
    margin-top: 25px;
  }

  @media screen and (min-width: 641px) {
    .PageContent {
      margin-bottom: 80px;
      margin-top: 0px;
    }
  }
</style>

<div class="Container customContactUsForm pageWidth">
  <header class="sectionHeader">
    {% if section.settings.upperTitle or section.settings.title %}
      <div class="text">
        {% if section.settings.upperTitle %}
          <h4 class="Section--spacingNormal lightSmallTitle">{{ section.settings.upperTitle }}</h4>
        {% endif %}
        {% if section.settings.title %}
          <h3 class="lightTitle">{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.title %}
          <h3 class="lightSmallTitle">{{ section.settings.subtitle }}</h3>
        {% endif %}
      </div>
    {% endif %}
  </header>

  <div class="PageContent PageContent--narrow">
    <div class="Rte">
      {%- form 'contact', class: 'Form Form--spacingTight' -%}
        {%- if form.posted_successfully? -%}
          <p class="Alert Alert--success">{{ 'contact.form.successfully_sent' | t }}</p>
        {%- endif -%}

        {%- if form.errors -%}
          <div class="Form__Alert Alert Alert--error">
            <ul class="Alert__ErrorList">
              {%- for field in form.errors -%}
                {%- if field == 'form' -%}
                  <li class="Alert__ErrorItem">{{ form.errors.messages[field] }}</li>
                {%- else -%}
                  <li class="Alert__ErrorItem">
                    <strong>{{ form.errors.translated_fields[field] }}</strong> {{ form.errors.messages[field] }}
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="Form__Group">
          <div class="Form__Item">
            <input
              type="text"
              class="Form__Input"
              name="contact[name]"
              aria-label="{{ 'contact.form.name' | t }}"
              placeholder="{{ 'contact.form.name' | t }}"
              required
              {% if customer %}
                value="{{ customer.name }}"
              {% endif %}
            >
            <label class="Form__FloatingLabel">{{ 'contact.form.name' | t }}</label>
          </div>

          <div class="Form__Item">
            <input
              type="email"
              class="Form__Input"
              name="contact[email]"
              aria-label="{{ 'contact.form.email' | t }}"
              placeholder="{{ 'contact.form.email' | t }}"
              required
              {% if customer %}
                value="{{ customer.email }}"
              {% endif %}
            >
            <label class="Form__FloatingLabel">{{ 'contact.form.email' | t }}</label>
          </div>
        </div>

        {%- for block in section.blocks -%}
          {%- if block.type == 'text' -%}
            <div class="Form__Item">
              {%- if block.settings.use_long_text -%}
                <textarea
                  name="contact[{{ block.settings.title | escape }}]"
                  cols="30"
                  rows="10"
                  class="Form__Textarea"
                  aria-label="{{ block.settings.title | escape }}"
                  placeholder="{{ block.settings.title | escape }}"
                  {% if block.settings.is_required %}
                    required
                  {% endif -%}
                ></textarea>
                <label class="Form__FloatingLabel">{{ block.settings.title | escape }}</label>
              {%- else -%}
                <input
                  type="text"
                  class="Form__Input"
                  name="contact[{{ block.settings.title | escape }}]"
                  aria-label="{{ block.settings.title | escape }}"
                  placeholder="{{ block.settings.title | escape }}"
                  {% if block.settings.is_required %}
                    required
                  {% endif %}
                >
                <label class="Form__FloatingLabel">{{ block.settings.title | escape }}</label>
              {%- endif -%}
            </div>
          {%- elsif block.type == 'dropdown' -%}
            {%- assign values = block.settings.values | split: ',' -%}

            {%- if values == empty -%}
              {%- continue -%}
            {%- endif -%}

            <div class="Form__Item">
              <div class="Form__Select Select Select--primary">
                {%- include 'icon' with 'select-arrow' -%}

                <select
                  name="contact[{{ block.settings.title | escape }}]"
                  title="{{ block.settings.title | escape }}"
                  required
                >
                  <option value="" disabled selected>{{ block.settings.title | escape }}</option>

                  {%- for value in values -%}
                    {%- assign trim_value = value | strip -%}

                    <option value="{{ trim_value | escape }}">{{ trim_value | escape }}</option>
                  {%- endfor -%}
                </select>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}

        <div class="Form__Item">
          <textarea
            name="contact[body]"
            cols="30"
            rows="10"
            class="Form__Textarea"
            aria-label="{{ 'contact.form.message' | t }}"
            placeholder="{{ 'contact.form.message' | t }}"
            required
          ></textarea>
          <label class="Form__FloatingLabel">{{ 'contact.form.message' | t }}</label>
        </div>

        <button style="text-decoration: none;" type="submit" class="Form__Submit Button Button--primary buttonPrimary Button--full">
          {{ 'contact.form.submit' | t }}
        </button>
      {%- endform -%}
    </div>
  </div>

  <div class="sectionHeader">
    <div class="text">
      <h4 class="Section--spacingNormal lightSmallTitle">{{ section.settings.textUnderForm }}</h4>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "upperTitle",
      "label": "Upper Title",
      "default": "We'd Love to Hear from You"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get in Touch"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Subtitle"
    },
    {
      "type": "text",
      "id": "textUnderForm",
      "label": "Text Under Form",
      "default": "We'd Love to Hear from You"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text field",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Field Label",
          "default": "Custom field"
        },
        {
          "type": "checkbox",
          "id": "use_long_text",
          "label": "Use long text",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "is_required",
          "label": "Field is required",
          "default": false
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "Dropdown",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Field Label",
          "default": "Custom field"
        },
        {
          "type": "text",
          "id": "values",
          "label": "Dropdown Values",
          "info": "Separate values with a comma.",
          "default": "Option 1, Option 2, Option 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Contact Form",
      "category": "Forms",
      "settings": {},
      "blocks": [
        {
          "type": "text",
          "settings": {
            "title": "Your Phone"
          }
        }
      ]
    }
  ]
}
{% endschema %}
