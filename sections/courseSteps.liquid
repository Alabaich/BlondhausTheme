<style>
  .airtouch-course-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    padding-top: 100px;
    padding-bottom: 100px;
  }

  .airtouch-course-title {
    font-size: 32px;
    font-weight: 600;
    line-height: 48px;
    text-transform: uppercase;
  }

  .course-duration {
    justify-content: center;
    align-items: center;
    gap: 10px;
    display: inline-flex;
  }

  .course-duration .dot {
    width: 24px;
    height: 24px;
    position: relative;
  }

  .module-section {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 50px;
    display: flex;
  }

  .module-header {
    height: 28px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 15px;
    display: flex;
  }

  .module-header .title {
    font-size: 20px;
    font-weight: 400;
    text-align: center;
  }

  .module-list {
    justify-content: center;
    align-items: flex-start;
    gap: 35px;
    display: inline-flex;
    flex-wrap: wrap;
  }

  .module-list .arrow-container {
    margin-top: 2%;
  }

  .individual-module {
    width: 25%;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 5px;
    display: inline-flex;
  }

  .individual-module .module-title {
    align-self: stretch;
    text-align: center;
    font-size: 24px;
    font-family: Josefin Sans;
    font-weight: 300;
    word-wrap: break-word;
  }

  .individual-module .module-description {
    align-self: stretch;
    text-align: center;
    font-size: 10px;
    font-family: Montserrat;
    font-weight: 50;
    word-wrap: break-word;
  }

  .separator-line {
    width: 24px;
    height: 24px;
    position: relative;
    transform: rotate(90deg);
    transform-origin: 0 0;
  }

  .separator-line .line {
    width: 12px;
    height: 16px;
    left: 6px;
    top: 4px;
    position: absolute;
    border: 1.5px #2c2d2c solid;
  }

  .arrow-icon {
    width: 24px;
    height: 24px;
    fill: none;
    stroke: #2c2d2c;
    stroke-width: 1.5;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .arrow-container {
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }

  @media screen and (max-width: 1500px) {
    .module-list {
      width: 85%;
    }
  }

  @media screen and (max-width: 768px) {
    .airtouch-course-title {
      text-align: center;
    }

    .module-list {
      flex-direction: column;
      align-items: center;
      width: 100%;
    }

    .individual-module {
      width: 65%;
    }

    .airtouch-course-section .course-duration .duration-text {
      font-size: 16px;
      font-weight: lighter;
    }
  }
</style>

<section class="airtouch-course-section pageWidth">
  <div class="airtouch-course-title">
    <h2 class="title">
      {{ section.settings.course_title }}
    </h2>
  </div>
  {% if section.settings.show_course_duration %}
    <div class="course-duration">
      <div class="dot">
        <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12.5 2.625C10.6458 2.625 8.83324 3.17483 7.29153 4.20497C5.74982 5.23511 4.54821 6.69929 3.83863 8.41234C3.12906 10.1254 2.94341 12.0104 3.30514 13.829C3.66688 15.6475 4.55976 17.318 5.87088 18.6291C7.182 19.9402 8.85246 20.8331 10.671 21.1949C12.4896 21.5566 14.3746 21.3709 16.0877 20.6614C17.8007 19.9518 19.2649 18.7502 20.295 17.2085C21.3252 15.6668 21.875 13.8542 21.875 12C21.8723 9.51443 20.8837 7.13145 19.1261 5.37389C17.3686 3.61633 14.9856 2.62773 12.5 2.625ZM12.5 20.625C10.7941 20.625 9.12658 20.1192 7.70821 19.1714C6.28984 18.2237 5.18435 16.8767 4.53154 15.3006C3.87874 13.7246 3.70793 11.9904 4.04073 10.3173C4.37353 8.64426 5.19498 7.10743 6.40121 5.9012C7.60744 4.69498 9.14426 3.87352 10.8174 3.54073C12.4904 3.20793 14.2246 3.37873 15.8006 4.03154C17.3767 4.68434 18.7237 5.78983 19.6714 7.20821C20.6192 8.62658 21.125 10.2941 21.125 12C21.1225 14.2867 20.213 16.4791 18.5961 18.0961C16.9791 19.713 14.7867 20.6225 12.5 20.625ZM18.125 12C18.125 12.0995 18.0855 12.1948 18.0152 12.2652C17.9448 12.3355 17.8495 12.375 17.75 12.375H12.5C12.4005 12.375 12.3052 12.3355 12.2348 12.2652C12.1645 12.1948 12.125 12.0995 12.125 12V6.75C12.125 6.65054 12.1645 6.55516 12.2348 6.48483C12.3052 6.41451 12.4005 6.375 12.5 6.375C12.5995 6.375 12.6948 6.41451 12.7652 6.48483C12.8355 6.55516 12.875 6.65054 12.875 6.75V11.625H17.75C17.8495 11.625 17.9448 11.6645 18.0152 11.7348C18.0855 11.8052 18.125 11.9005 18.125 12Z" fill="#2C2D2C"/>
        </svg>
      </div>
      <div class="duration-text">
        {{ section.settings.course_duration }}
      </div>
    </div>
  {% endif %}

  <div class="module-section">
    <div class="module-header">
      <div class="title">
        <p class="lightSmallTitle">{{ section.settings.subtitle }}</p>
      </div>
    </div>
    <div class="module-list">
      {% for block in section.blocks %}
        {% if block.type == 'module' %}
          <div class="individual-module">
            <div class="module-title">{{ block.settings.module_title }}</div>
            <div class="module-description">{{ block.settings.module_description }}</div>
          </div>
        {% elsif block.type == 'arrow' %}
          <div class="arrow-container">
            <svg class="arrow-icon" viewBox="0 0 24 24">
              <path d="M20 12L14 6M20 12L14 18M20 12L9.5 12M4 12H6.5" />
            </svg>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Course Steps",
  "settings": [
    {
      "type": "text",
      "label": "Course Title",
      "id": "course_title",
      "default": "Airtouch Technology Course"
    },
    {
      "type": "text",
      "label": "Course Duration",
      "id": "course_duration",
      "default": "5 weeks"
    },
    {
      "type": "checkbox",
      "label": "Show Course Duration",
      "id": "show_course_duration",
      "default": true
    },
    {
      "type": "text",
      "label": "Subtitle",
      "id": "subtitle",
      "default": "Modules"
    }
  ],
  "blocks": [
    {
      "type": "module",
      "name": "Module",
      "settings": [
        {
          "type": "text",
          "label": "Module Title",
          "id": "module_title",
          "default": "Module Title"
        },
        {
          "type": "textarea",
          "label": "Module Description",
          "id": "module_description",
          "default": "Module Description"
        }
      ]
    },
    {
      "type": "arrow",
      "name": "Arrow",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Course Steps",
      "category": "Custom"
    }
  ]
}
{% endschema %}
