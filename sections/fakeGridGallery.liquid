<style>
  .mainGridContainer .Frame41 {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 15px;
  }

  .mainGridContainer .Frame41 h1 {
    margin: 0;
  }
  .mainGridContainer .CourseGallery {
    text-align: center;
    color: #2c2d2c;
    font-size: 42px;
    font-family: 'Josefin Sans', sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    line-height: 48px;
    word-wrap: break-word;
  }
  .mainGridContainer .OurStudentsWorks {
    width: 917px;
    text-align: center;
    color: #2c2d2c;
    font-size: 24px;
    font-family: 'Josefin Sans', sans-serif;
    font-weight: 300;
    word-wrap: break-word;
  }
  .mainGridContainer .Group126 {
    column-count: 3;
    column-gap: 15px;
    width: 100%;
    max-width: 1482px;
  }

  @media (max-width: 1024px) {
    .mainGridContainer .Group126 {
      column-count: 2;
    }
  }

  @media (max-width: 768px) {
    .mainGridContainer .Group126 {
      column-count: 1;
    }
  }

  .mainGridContainer .gallery-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    margin-bottom: 15px;
  }
</style>

<section class="pageWidth mainGridContainer">
  <div class="Frame41">
    <h5 class="lightSmallTitle">{{ section.settings.upper_title }}</h5>
    <h1>{{ section.settings.title }}</h1>
    <h5 class="lightSmallTitle">{{ section.settings.subtitle }}</h5>
    <div class="Group126">
      <img class="gallery-image" src="{{ section.settings.image_1 | img_url: '600x600' }}" alt="Gallery Image 1">
      <img class="gallery-image" src="{{ section.settings.image_2 | img_url: '600x600' }}" alt="Gallery Image 2">
      <img class="gallery-image" src="{{ section.settings.image_3 | img_url: '600x600' }}" alt="Gallery Image 3">
      <img class="gallery-image" src="{{ section.settings.image_4 | img_url: '600x600' }}" alt="Gallery Image 4">
      <img class="gallery-image" src="{{ section.settings.image_5 | img_url: '600x600' }}" alt="Gallery Image 5">
      <img class="gallery-image" src="{{ section.settings.image_6 | img_url: '600x600' }}" alt="Gallery Image 6">
      <img class="gallery-image" src="{{ section.settings.image_7 | img_url: '600x600' }}" alt="Gallery Image 7">
      <img class="gallery-image" src="{{ section.settings.image_8 | img_url: '600x600' }}" alt="Gallery Image 8">
      <img class="gallery-image" src="{{ section.settings.image_9 | img_url: '600x600' }}" alt="Gallery Image 9">
    </div>
  </div>
</section>

