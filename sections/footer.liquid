<style>
  .site-footer {
    padding: 40px 0;
    color: #333;
    width: 100%;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: relative;
    z-index: 100;
  }

  .footer-wrapper {
    padding: 50px 25px;
    background-color: #f8f8f8;
    width: 100%;
    box-sizing: border-box;
    box-shadow: 0 -2px 2px 0 rgba(0, 0, 0, 0.15);
  }

  .image-container {
    display: flex;
    justify-content: center;
    width: 100%;
    margin-bottom: 0;
  }

  .footer-blocks {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 15px;
    width: 100%;
  }

  .nav-blocks-container {
    display: flex;
    flex: 2;
    justify-content: center;
    gap: 5px;
  }

  .footer-block {
    flex: 1 1 auto;
  }

  .nav-block {
    min-width: 120px;
    max-width: 180px;
    margin-right: 0;
  }

  .footer-block-content,
  .about-shop-block {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-block-title {
    color: #2c2d2c;
    font-family: 'Josefin Sans', sans-serif;
    font-size: 20px;
    font-weight: 500;
    text-transform: uppercase;
  }

  .footer-block-title a {
    text-decoration: none;
    color: inherit;
  }

  .footer-block-title a:hover {
    text-decoration: underline;
  }

  .footer-parent-link {
    color: #2c2d2c;
    font-family: 'Josefin Sans', sans-serif;
    font-size: 20px;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
  }

  .footer-child-link {
    color: #2c2d2c;
    font-family: Montserrat, sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-decoration: none;
  }

  .newsletter-block {
    flex-basis: 250px;
    max-width: 350px;
  }

  .newsletter-block .footer-block-content {
    gap: 10px;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .input-email {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    font-size: 14px;
  }

  .buttonPrimary {
    background: #2c2d2c;
    color: white;
    border: none;
    cursor: pointer;
  }

  .social-icons {
    display: flex;
    gap: 15px;
  }

  .social-icons a {
    display: inline-block;
  }

  .social-icons svg {
    width: 32px;
    height: 32px;
    fill: #333;
  }

  .footer-links a {
    text-decoration: none;
    color: #888;
    font-size: 13px;
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  .about-shop-block {
    flex-basis: 250px;
    max-width: 250px;
  }

  .about-shop-block .footer-block-content {
    gap: 10px;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    background-color: transparent;
    width: 100%;
  }

  .footer-bottom small {
    font-size: 14px;
    color: #2c2d2c;
  }

  @media (max-width: 768px) {
    .footer-blocks {
      flex-direction: column;
      gap: 20px;
    }

    .about-shop-block {
      flex-basis: 100px;
    }

    .nav-blocks-container {
      flex-direction: column;
      gap: 20px;
    }

    .footer-block {
      max-width: 100%;
    }

    .nav-block {
      max-width: 100%;
    }
  }
</style>

<footer class="site-footer">
  <div class="image-container">
    {% if section.settings.footer_image != blank %}
      <img
        src="{{ section.settings.footer_image | img_url: 'master' }}"
        alt="{{ section.settings.footer_image.alt | default: 'Image description' }}"
        style="max-width: 100%; height: auto;"
