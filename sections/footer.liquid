            {% endif %}
          </div>
        </div>
      {% endif %}

      <div class="nav-blocks-container">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_list' %}
              {% if block.settings.menu != blank %}
                {% for link in linklists[block.settings.menu].links %}
                  <div class="footer-block nav-block" {{ block.shopify_attributes }} data-block-type="link_list">
                    {% if block.settings.heading != blank %}
                      <h4 class="footer-block-title">
                        <a href="{{ link.url }}">{{ link.title | escape }}</a>
                      </h4>
                    {% else %}
                      <h4 class="footer-block-title">
                        <a href="{{ link.url }}">{{ link.title | escape }}</a>
                      </h4>
                    {% endif %}

                    {% if link.links != blank %}
                      <ul class="footer-links">
                        {% for child_link in link.links %}
                          <li>
                            <a href="{{ child_link.url }}" class="footer-child-link">{{ child_link.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </div>
                {% endfor %}
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'text' %}
            <div class="footer-block about-shop-block" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h4 class="footer-block-title">{{ block.settings.heading | escape }}</h4>
              {% endif %}
              <div class="footer-block-content text-content">
                {{ block.settings.subtext }}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

  <div class="footer-bottom">
    <small>&copy; {{ 'now' | date: '%Y' }} - BLONDHAUS - All rights reserved</small>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer settings"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "label": "Enable newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "footer_image",
      "label": "Footer image"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (optional)",
          "info": "Если оставить пустым, будет использовано название родительской ссылки"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text content",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About the shop"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "label": "Text",
          "default": "<p>Share contact information, store details, and brand content with your customers.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "link_list"
        },
        {
          "type": "link_list"
        }
      ]
    }
  ]
}
{% endschema %}
