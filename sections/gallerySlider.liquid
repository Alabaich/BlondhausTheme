<style>
  .swiper-container {
    width: 100%;
    height: 200px;
  }

  .swiper-slide img {
    height: auto;
    border-radius: 8px;
  }
</style>

<section class="gallerySliderContainer">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="Image">
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script type="module">
  import Splide from '@splidejs/splide';
  import { AutoScroll } from '@splidejs/splide-extension-auto-scroll';

  document.addEventListener('DOMContentLoaded', function () {
    // Инициализация слайдера
    const splide = new Splide('.swiper-container', {
      type: 'loop', // Зацикливание слайдов
      drag: 'free', // Разрешение на свободный перетаскивание
      focus: 'center', // Фокус на центральный слайд
      perPage: 3, // Количество слайдов на экране
      autoScroll: {
        speed: 1, // Скорость авто-скроллинга
      },
      breakpoints: {
        768: {
          perPage: 1, // 1 слайд на экране на мобильных устройствах
        },
        1024: {
          perPage: 2, // 2 слайда на экране на планшетах
        },
      },
    });

    splide.mount(); // Монтирование слайдера
  });
</script>

{% schema %}
{
  "name": "Gallery Slider",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
