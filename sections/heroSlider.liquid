{{ 'https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css' | asset_url | stylesheet_tag }}
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js" defer="defer"></script>

<style>
  .hero-slider-section {
    position: relative;
    height: 100vh;
    overflow: hidden;
    width: 100%;
    margin: 0;
    padding: 0;
    margin-top: -10px;
  }

  .hero-slide-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    padding: 25px 30px;
    z-index: 20;
    width: auto;
    border-radius: 5px;
    border: 1px solid #cdcdcd;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(3px);
    display: flex;
    flex-direction: column;
    gap: 25px;
    align-items: center;
  }

  .hero-slider-uppertitle {
    color: #fff;
    font-family: 'Josefin Sans', sans-serif;
    font-size: 24px;
    font-weight: 300;
  }

  .hero-slider-title {
    color: #fff;
    font-family: 'Josefin Sans', sans-serif;
    font-size: 42px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .hero-slider-button {
    display: inline-flex;
    padding: 15px 30px !important;
    justify-content: center;
    align-items: center;
    background: #fff !important;
    color: #2c2d2c !important;
    cursor: pointer;
    text-decoration: none;
    width: fit-content;
    transition: all 0.3s ease;
  }


  .splide__slide {
    position: relative;
    height: 100vh;
    width: 100vw !important;
  }

  .splide__slide img,
  .splide__slide video {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    display: block;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 10;
  }

  .splide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
  }

  .splide__track {
    width: 100vw !important;
    height: 100vh;
  }

  .splide__list {
    width: 100vw !important;
    height: 100vh;
    display: flex;
  }

  @media screen and (max-width: 768px) {
    .hero-slide-content {
      padding: 15px 20px;
      gap: 15px;
      width: 80%;
    }

    .hero-slider-uppertitle {
      font-size: 18px;
    }

    .hero-slider-title {
      font-size: 28px;
    }

    .hero-slider-button {
      padding: 12px 24px !important;
    }
  }
</style>

<div class="hero-slider-section">
  <div class="splide" role="group" aria-label="Hero Section Slider">
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks %}
          <li class="splide__slide">
            {% if block.settings.media_type == 'image' %}
              {% if block.settings.slide_image != blank %}
                <img
                  src="{{ block.settings.slide_image | img_url: '1920x' }}"
                  alt="{{ block.settings.slide_image.alt | escape }}"
                  loading="lazy"
                  width="100vw"
                  height="100vh"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder' }}
              {% endif %}
            {% elsif block.settings.media_type == 'video' and block.settings.video_url != blank %}
              <video
                autoplay
                muted
                loop
                playsinline
                width="100%"
                height="100%"
              >
                <source src="{{ block.settings.video_url }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            {% endif %}

            <div class="video-overlay"></div>

            <div class="hero-slide-content">
              {% if block.settings.uppertitle != blank %}
                <div class="hero-slider-uppertitle">{{ block.settings.uppertitle }}</div>
              {% endif %}
              {% if block.settings.title != blank %}
                <div class="hero-slider-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.button_url != blank and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_url }}" class="hero-slider-button buttonPrimary">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Инициализация слайдера
    const splide = new Splide('.splide', {
      type: 'loop',
      perPage: 1,
      autoplay: true,
      interval: 5000,
      pauseOnHover: false,
      keyboard: 'focused',
      arrows: false,
      pagination: true,
      width: '100vw',
      height: '100vh',
    }).mount();

    splide.on('move', function () {
      const activeSlide = splide.Components.Slides.getAt(splide.index);
      const video = activeSlide.slide.querySelector('video');

      document.querySelectorAll('.splide__slide video').forEach((v) => {
        if (v !== video) v.pause();
      });

      if (video) {
        video.play().catch((e) => console.log('Автовоспроизведение видео предотвращено:', e));
      }
    });
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "hero-slider-section",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "select",
          "id": "media_type",
          "label": "Media Type",
          "options": [
            {
              "value": "image",
              "label": "Image"
            },
            {
              "value": "video",
              "label": "Video"
            }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image",
          "info": "Choose an image to display on the slide."
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL",
          "info": "Choose a video to display on the slide.",
        },
        {
          "type": "text",
          "id": "uppertitle",
          "label": "Uppertitle Text",
          "default": "April 30 11:00 · Live Stream"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title Text",
          "default": "Essentials Airtouch Masterclass"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "/collections/all"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Apply To Live"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "category": "Image",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
